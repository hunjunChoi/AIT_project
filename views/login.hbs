<h2>{{message}}</h2>

<form class="mb-6" method="POST" action="">
    <div class="flex flex-col mb-4">
        {{! <label>Username:</label> }}
        Username:
        <br />
        <input
            class="border py-2 px-3 text-grey-darkest"
            name="username"
            type="text"
            placeholder="Username"
            required
        />
        <br />
        <br />
    </div>
    {{! <div class="form-row"> }}
    <div class="flex flex-col mb-4">
        {{! <label>Password:</label> }}
        Password:
        <br />
        <input
            class="border py-2 px-3 text-grey-darkest"
            name="password"
            type="password"
            placeholder="Password"
            required
        />
        <br />
        <br />
    </div>
    <div class="form-row">
        <input
            class="block bg-teal hover:bg-teal-dark text-white uppercase text-lg mx-auto p-4 rounded"
            type="submit"
            value="Login"
        />
    </div>
    <div class="form-row">Don't have an account?
        <a
            class="block w-full text-center no-underline text-sm text-grey-dark hover:text-grey-darker"
            href="/register"
        >Register</a>.
    </div>
</form>